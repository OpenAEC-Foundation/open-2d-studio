{
  "identifier": "mobile",
  "description": "Capabilities for the Android tablet viewer",
  "platforms": ["android"],
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:webview:default",
    "dialog:default",
    "fs:default",
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [{ "path": "**" }]
    }
  ]
}
